<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/lrlContent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lrlContentBox">

        <TextView
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:text="##"
            android:id="@+id/lrlLocationId"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="#FF000000"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lrlLocationDetails">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Place of Interest"
                android:id="@+id/lrlLocationName"
                android:padding="5dp"
                android:textColor="#FF000000"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="1234 Some Road"
                android:id="@+id/lrlLocationAddress"
                android:padding="5dp"
                android:textColor="#FF000000"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Some City,"
                    android:id="@+id/lrlLocationCity"
                    android:textColor="#FF000000"
                    android:paddingRight="2.5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SS"
                    android:id="@+id/lrlLocationState"
                    android:textColor="#FF000000"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="2.5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="54321"
                    android:id="@+id/lrlLocationZip"
                    android:padding="5dp"
                    android:textColor="#FF000000"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="(###)###-####"
                android:id="@+id/lrlLocationPhone"
                android:padding="5dp"
                android:textColor="#FF000000"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>